<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số 1: "
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edtso1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số 2: "
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edtso2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả: "
            android:textStyle="bold"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/edtkq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:enabled="false"
            android:textSize="30dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:onClick="random"
        android:text="Tạo dữ liệu"
        android:textSize="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_cong"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btncong"
            android:onClick="cong"
            android:text="+"
            android:textSize="85dp" />
        <ImageButton
            android:id="@+id/btn_tru"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="-"
            android:onClick="tru"
            android:textSize="85dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btntru"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <ImageButton
            android:id="@+id/btn_nhan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="X"
            android:onClick="nhan"
            android:textSize="85dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btnnhan"/>
        <ImageButton
            android:id="@+id/btn_chia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="/"
            android:onClick="chia"
            android:textSize="85dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btnchia"/>
    </LinearLayout>
</LinearLayout>